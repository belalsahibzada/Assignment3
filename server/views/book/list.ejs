<%- include ../partials/header %>
<%- include ../partials/main_nav %>
<main class="container">
    
      <div class="row">
        <div class="col-md-offset-3 col-md-10"> <!--web page can contain max of 8 columns, if you want to change it, change col-md-8-->
            <h1 class="book-title"><%= title %></h1>
            <br>
            <a href="/books/add" class="btn btn-primary" role="button">
              <i class="fas fa-plus-circle"></i> Add a Book </a>
            <br>
            <br>
            
      <table class="table table-bordered table-striped table-hover">
      <tr> 
        <th class="text-center col-2"> Name </th>
        <th class="text-center col-2"> Author </th>
        <th class="text-center col-2"> Year Published </th>
        <th class="text-center col-2"> Price </th>
        <th class="text-center col-1">  </th>
        <th class="text-center col-1">  </th>
      </tr>
      <% for(let count=0; count<Booklist.length; count++) { %> 
        <tr> 
            <td class="text-center col-2"> <%= Booklist[count].name %> </td>
            <td class="text-center col-2"> <%= Booklist[count].author %></td>
            <td class="text-center col-2"> <%= Booklist[count].year %></td>
            <td class="text-center col-2"> <%= Booklist[count].price %></td>
            <td class="text-center col-1">
             <a href="/books/edit/<%= Booklist[count]._id %>"
             class="btn btn-primary">
             <i class="fas fa-pencil-alt"></i> Edit </a> </td>
            <td class="text-center col-1">
             <a href="/books/delete/<%= Booklist[count]._id %>"
             class="btn btn-danger">
             <i class="fas fa-trash-alt"></i> Delete </a> </td>
        </tr> 
      <% } %>
      </table>
      
      </div>
      </div>
    
 
</main>



<%- include ../partials/bottom_nav %>
<%- include ../partials/footer %>
